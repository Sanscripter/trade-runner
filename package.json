{
  "name": "trade_runner",
  "version": "0.20.0-alpha.0",
  "description": "Public Alpha Version of Trade Runner",
  "author": {
    "name": "Guillermo Mur√∫a",
    "email": "guillermoasmurua@gmail.com"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "storybook": "ng run trading-grounds:storybook",
    "build-storybook": "ng run trading-grounds:build-storybook",
    "electron": "npm run build && electron .",
    "electron-dev": "concurrently -k \"ng serve\" \"set NODE_ENV=development && electron .\"",
    "electron-build": "npm run build && electron-builder"
  },
  "private": true,
  "build": {
    "appId": "com.trade_runner.id",
    "productName": "Trade Runner",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/trading-grounds/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      "src/assets/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "src/assets/icons/icon_win.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "games",
      "icon": "src/assets/icons/icon_deb.png"
    },
    "mac": {
      "target": "dmg",
      "category": "games",
      "icon": "src/assets/icons/icon_mac.icns"
    }
  },
  "dependencies": {
    "@angular/animations": "^17.1.2",
    "@angular/common": "^17.1.2",
    "@angular/compiler": "^17.1.2",
    "@angular/core": "^17.1.2",
    "@angular/forms": "^17.1.2",
    "@angular/platform-browser": "^17.1.2",
    "@angular/platform-browser-dynamic": "^17.1.2",
    "@angular/router": "^17.1.2",
    "@types/fabric": "4.2.1",
    "@types/howler": "^2.2.11",
    "fabric": "5.3.0-browser",
    "firebase": "^10.8.0",
    "howler": "^2.2.4",
    "nes.css": "^2.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.10",
    "@angular/cli": "^17.0.10",
    "@angular/compiler-cli": "^17.0.0",
    "@compodoc/compodoc": "1.1.23",
    "@storybook/addon-docs": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/angular": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.33",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.2.2"
  }
}
